{
  "name": "react-performance-tracking",
  "version": "0.1.1",
  "description": "React performance profiling with Playwright test integration",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./react": {
      "types": "./dist/react/index.d.ts",
      "import": "./dist/react/index.js",
      "require": "./dist/react/index.cjs"
    },
    "./playwright": {
      "types": "./dist/playwright/index.d.ts",
      "import": "./dist/playwright/index.js",
      "require": "./dist/playwright/index.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "docs:dev": "vocs dev",
    "docs:build": "vocs build --searchIndex false && cp public/index.html site/dist/index.html && cp -r site/public/* site/dist/ && node -e \"const fs=require('fs'),path=require('path');const inject=(d)=>{fs.readdirSync(d).forEach(f=>{const p=path.join(d,f);fs.statSync(p).isDirectory()?inject(p):f.endsWith('.html')&&fs.writeFileSync(p,fs.readFileSync(p,'utf8').replace('</head>','<script src=\\\"/logo-redirect.js\\\" defer></script></head>'))})};inject('site/dist/docs')\"",
    "docs:preview": "vocs preview",
    "docs:serve": "npm run docs:build && npx serve site/dist -p 3000",
    "test": "vitest run",
    "test:ci": "vitest run --coverage",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "serve:test-app": "vite --config tests/fixtures/test-app/vite.config.ts tests/fixtures/test-app",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src tests",
    "lint:fix": "eslint src tests --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx}\" \"tests/**/*.{ts,tsx}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx}\" \"tests/**/*.{ts,tsx}\"",
    "pack:fresh": "rm -f *.tgz && npm run build && npm pack",
    "prepublishOnly": "npm run build",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "keywords": [
    "react",
    "performance",
    "profiler",
    "testing",
    "playwright",
    "react-profiler",
    "performance-testing",
    "e2e-testing",
    "benchmark"
  ],
  "author": "Mariusz Kaczkowski",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mkaczkowski/react-performance-tracking.git"
  },
  "bugs": {
    "url": "https://github.com/mkaczkowski/react-performance-tracking/issues"
  },
  "homepage": "https://github.com/mkaczkowski/react-performance-tracking#readme",
  "engines": {
    "node": ">=22.0.0"
  },
  "peerDependencies": {
    "@playwright/test": "^1.40.0",
    "react": "^18.0.0 || ^19.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "@playwright/test": {
      "optional": true
    }
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@playwright/test": "1.46.1",
    "@testing-library/dom": "^10.0.0",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^16.0.0",
    "@types/node": "^24.10.1",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "^4.0.15",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react-hooks": "^7.0.1",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "jsdom": "^27.3.0",
    "lint-staged": "^16.2.7",
    "playwright-core": "1.46.1",
    "prettier": "^3.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.48.1",
    "vite": "^7.0.0",
    "vitest": "^4.0.15",
    "vocs": "^1.3.1"
  }
}
